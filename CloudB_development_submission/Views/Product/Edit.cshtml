@model CloudB_development_submission.Models.Product

<div class="container py-4">
    <h2 class="mb-3">Edit Product</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="PartitionKey" />
        <input type="hidden" asp-for="RowKey" />

        <div class="mb-3">
            <label asp-for="ProductName" class="form-label"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>





        <div class="mb-3">
            <label for="file" class="form-label">Change Image</label>
            <input type="file" name="file" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>



