@model CloudB_development_submission.Models.Order

<div class="container py-4">
    <!-- ================= ADD NEW ORDER ================= -->
    <h2 class="mb-3">Add New Order</h2>

    <form asp-action="AddOrderWithPayment" method="post" enctype="multipart/form-data">


        <!-- Dynamic Products -->
        <div class="mb-3">
            <label class="form-label">Products</label>
            <div id="productList">
                <div class="input-group mb-2">
                    <input type="text" name="Products" class="form-control" placeholder="Enter product by name" />

                    <button type="button" class="btn btn-danger remove-product">X</button>
                </div>
            </div>
            <button type="button" id="addProduct" class="btn btn-outline-primary btn-sm">+ Add Product</button>
        </div>

        <!-- Delivery Date -->
        <div class="mb-3">
            <label asp-for="DeliveryDate" class="form-label"></label>
            <input asp-for="DeliveryDate" type="date" class="form-control" />
            <span asp-validation-for="DeliveryDate" class="text-danger"></span>
        </div>

        <!-- Payment Option -->
        <div class="mb-3">
            <label asp-for="PaymentOption" class="form-label">Payment Option</label>
            <select asp-for="PaymentOption" class="form-select">
                <option value="">-- Select Payment Option --</option>
                <option value="Cash">Cash</option>
                <option value="Card">Card</option>
                <option value="EFT">EFT</option>
                <option value="PayPal">PayPal</option>
            </select>
            <span asp-validation-for="PaymentOption" class="text-danger"></span>
        </div>

        <!-- Buttons -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>

    <hr class="my-4" />

    <!-- ================= DISPLAY EXISTING ORDERS ================= -->
    @if (ViewBag.Orders is List<CloudB_development_submission.Models.Order> ordersList && ordersList.Any())
    {
        <h3 class="mb-3">Existing Orders</h3>
        <div class="row">
            @foreach (var order in ordersList)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(order.ImageUrl))
                        {
                            <img src="@order.ImageUrl" class="card-img-top" alt="@order.OrderName" />
                        }

                        <div class="card-body">
                            <!-- Order Name -->
                            <h5 class="card-title">@order.OrderName</h5>

                            <!-- Products -->
                            <p><strong>Products:</strong></p>
                            @if (order.Products != null && order.Products.Any())
                            {
                                <ul class="list-group list-group-flush mb-3">
                                    @foreach (var product in order.Products)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            @product
                                            <form asp-action="DeleteProduct" method="post" class="d-inline">
                                                <input type="hidden" name="orderId" value="@order.RowKey" />
                                                <input type="hidden" name="productName" value="@product" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                            </form>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">No products added</p>
                            }



                        <!-- Status -->
                        <p class="mb-1">
                            <strong>Status:</strong>
                            <span class="badge
                                            @(order.OrderStatus == "Pending" ? "bg-warning text-dark" :
                                                                                                          order.OrderStatus == "Shipped" ? "bg-info text-dark" :
                                                                                                          order.OrderStatus == "Delivered" ? "bg-success" :
                                                                                                          "bg-secondary")">
                                                                                                                       @order.OrderStatus
                                                                                                                   </span>
                                                                                                               </p>

                        <!-- Order Date -->
                        <p class="mb-3">
                            <strong>Order Date:</strong>
                            @(order.OrderDate.HasValue
                                                    ? order.OrderDate.Value.ToString("dd MMM yyyy")
                                                    : "N/A")
                    </p>

                            <!-- Details Button -->
                            <a asp-action="Details" asp-route-id="@order.RowKey" class="btn btn-primary btn-sm">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
                }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add new product field
        document.getElementById("addProduct").addEventListener("click", function () {
            var container = document.createElement("div");
            container.className = "input-group mb-2";
            container.innerHTML = `
                <input type="text" name="Products" class="form-control" placeholder="Enter product" />
                <button type="button" class="btn btn-danger remove-product">X</button>
            `;
            document.getElementById("productList").appendChild(container);
        });

        // Remove product field
        document.addEventListener("click", function (e) {
            if (e.target && e.target.classList.contains("remove-product")) {
                e.target.parentElement.remove();
            }
        });
    </script>
}


